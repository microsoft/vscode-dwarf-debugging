{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "NodeNext",
    "lib": [
      "WebWorker"
    ],
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src/*",
    "tests/*"
  ]
}